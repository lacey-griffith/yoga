<div class="custom-container">
        <div class="jumbotron" style="background-color: #71697a; color: #ffffff; font-family: 'Pacifico', cursive;">
            <br />
            {{#if success}}
            <div class="alert alert-success alert-dismissible fade show">
                <strong>{{success}}</strong>
                <button class="close" data-dismiss="alert"><span>&times;</span></button>
            </div>
            {{/if}}
            {{#if error}}
            <div class="alert alert-danger alert-dismissible fade show">
                <strong>{{error}}</strong>
                <button class="close" data-dismiss="alert"><span>&times;</span></button>
            </div>
            {{/if}}

            <h1>Yoga</h1>
            <br />

            <form action="" id="login" method="POST">
                <div class="form-group">
                    <label for="email">Username<span class="text-danger">*</span></label>
                    <input type="email" class="form-control" name="username" id="email" placeholder="Enter your email id">
                </div>
                <div class="form-group">
                    <label for="password">Password<span class="text-danger">*</span></label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Enter Your Password">
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-info btn-block">
                </div>
        
            </form>
        </div>
    </div>
